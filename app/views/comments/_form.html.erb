<div class="row">
  <%= form_tag board_post_comments_path(board, post), method: :post %>

  <div class="form-group">
    <%= hidden_field_tag 'comment[post_id]', post.id %>
    <%= label_tag 'comment[text]', "Commenting as: "\
                                   "#{link_to(current_user.username,
                                              current_user)}".html_safe %>
    <%= text_area_tag 'comment[text]', nil,
                                       rows: 3,
                                       autofocus: true,
                                       class: "form-control" %>
  </div>
</div>

<div class="row">
  <button type="submit" class="btn btn-default">Save</button>
</div>