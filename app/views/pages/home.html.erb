<div class="jumbotron">
	<h2>Find your board</h2>
</div>

<%= form_tag find_board_path, method: :post do %>
	<div class="form-group">
		<%= label_tag :address %>
		<%= text_field_tag :address, nil, class: "form-control", autofocus: true %>
	</div>

	<button type="submit" class="btn btn-default">Find</button>
<% end %>

<br><br>
<%= link_to 'Create a board', new_board_path %>