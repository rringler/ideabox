<div class="row">
  <div class="col-sm-8">
    <h2><%= @user.username %>'s profile</h2>
  </div>
</div>

<hr />

<% if @user.recent_ideas %>
  <section id="posts">
    <div class="row">
      <div class="col-sm-12">
        <h4>Recent ideas:</h4>
      </div>
    </div>
    <%= render partial: 'shared/idea_summary', collection: @user.recent_ideas,
                                               as: :idea %>
  </section>

  <hr />
<% end %>

<% if @user.recent_comments %>
  <section id="comments">
    <div class="row">
      <div class="col-sm-12">
        <h4>Recent comments:</h4>
      </div>
    </div>
    <%= render partial: 'shared/comment_summary', collection: @user.recent_comments,
                                                  as: :comment %>
  </section>
<% end %>
