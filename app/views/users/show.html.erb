<div class="row">
	<div class="col-sm-8">
		<h2><%= @user.username %>'s profile</h2>
	</div>
</div>

<hr />

<% if @posts %>
	<div class="row">
		<div class="col-sm-12">
			<div class="well">
				<div class="row">
					<h4>Recent posts:</h4>
				</div>
				<div class="row">
					<%= render partial: 'shared/post', collection: @posts,
																						 locals: { wrap_in: :well,
																						 					 show_board: true } %>
				</div>
			</div>
		</div>
	</div>
<% end %>

<% if @comments %>
	<div class="row">
		<div class="col-sm-12">
			<div class="well">
				<div class="row">
					<h4>Recent comments:</h4>
				</div>
				<div class="row">
					<%= render partial: 'shared/comment', collection: @comments,
																								locals: { wrap_in: :well,
																													show_post: true } %>
				</div>
			</div>
		</div>
	</div>
<% end %>
