<div class="jumbotron">
	<h2>board: <%= @post.board.title %></h2>
</div>

<hr />

<h2><%= @post.title %></h2>
<small>submitted <%= time_ago_in_words(@post.created_at) %> ago 
		by <%= link_to @post.user.username %></small>
<div class="well">
	<%= @post.text %>
</div>
<small><%= @post.comments.size %> comments</small>

<hr />

<%= form_tag '/comments', method: :post %>

<div class="form-group">
	Commenting as: <%= link_to current_user.username, current_user %>
	<%= text_area_tag :text, nil,
													 columns: 1,
													 rows: 3,
													 autofocus: true,
													 class: "form-control" %>
</div>

<button type="submit" class="btn btn-default">Save</button>