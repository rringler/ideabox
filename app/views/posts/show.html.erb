<div class="row">
	<div class="col-sm-10">
		<%= @board.title_block %>
	</div>
	<div class="col-sm-2">
		<%= @board.subscribe_button(class: "pull-right") %>
	</div>
</div>

<hr />

<div class="row post-title">
	<div class="col-sm-1">
		<span><%= render 'shared/vote_box', voteable: @post %></span>
	</div>
	<div class="col-sm-11">
		<div class="row">
			<h2><%= @post.title %></h2>
		</div>
		<div class="row">
			<small><%= @post.sub_title %></small>
		</div>
	</div>
</div>

<div class="row post">
	<div class="col-sm-12">
		<%= @post.text %>
	</div>
</div>

<div class="row post-stats">
	<div class="col-sm-12">
		<small><%= @post.stats %></small>
	</div>
</div>

<hr />

<%= render partial: 'comments/form', locals: { post: @post,
																							 board: @post.board } %>

<hr />

<div class="comments-container">
	<div class="row">
		<div class="col-sm-12">
			<h4>Recent comments:</h4>
		</div>
	</div>

	<%= @post.comments_block %>
</div>
