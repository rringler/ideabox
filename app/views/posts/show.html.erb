<div class="row">
	<div class="col-sm-10">
		<%= @board.title_block %>
	</div>
	<div class="col-sm-2">
		<%= @board.subscribe_button(class: "pull-right") %>
	</div>
</div>

<hr />

<div class="row post-title">
	<div class="col-sm-1">
		<span><%= render 'shared/vote_box', voteable: @post %></span>
	</div>
	<div class="col-sm-11">
		<div class="row">
			<h3 id="post-title"><%= @post.title %></h3>
		</div>
		<div class="row">
			<small><%= @post.sub_title %></small>
		</div>
	</div>
</div>

<div class="row post">
	<div class="col-sm-12">
		<%= @post.text %>
	</div>
</div>

<div class="row post-stats">
	<div class="col-sm-12">
		<small><%= @post.stats %></small>
	</div>
</div>

<hr />

<% link_params = { board_id:  @board,
									 post_id:   @post,
									 parent_id: nil } %>
<%= link_to 'Reply', new_board_post_comment_path(link_params),
										 class: 'btn btn-primary',
										 remote: true,
										 method: :get %>
<div id="<%= "comment-#{nil}-reply-form" %>"></div>

<hr />

<div class="comments-container">
	<div class="row">
		<div class="col-sm-12">
			<h4>Recent comments:</h4>
		</div>
	</div>

	<%= @post.comments_block %>
</div>
