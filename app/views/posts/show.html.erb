<div class="jumbotron">
	<h2><%= link_to @post.board.title, @post.board %></h2>
	<h4><%= @post.board.description %></h4>
</div>

<hr />

<h2><%= @post.title %></h2>
<small>submitted <%= time_ago_in_words(@post.created_at) %> ago 
		by <%= link_to @post.user.username %></small>
<div class="well">
	<%= @post.text %>
</div>
<small><%= @post.comments.size %> comments</small>

<hr />

<% if @post.comments.any? %>
	<%= render partial: 'comment', collection: @comments %>
<% end %>


<%= form_tag board_post_comments_path(@post.board, @post), method: :post %>

<div class="form-group">
	Commenting as: <%= link_to current_user.username, current_user %>
	<%= hidden_field_tag 'comment[post_id]', @post.id %>
	<%= text_area_tag 'comment[text]', nil,
																			columns: 1,
																			rows: 3,
																			autofocus: true,
																			class: "form-control" %>
</div>

<button type="submit" class="btn btn-default">Save</button>